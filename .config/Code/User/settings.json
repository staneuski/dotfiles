{
    "[plaintext]": {
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        }
    },
    "[python]": {

    },
    "[shellscript]": {
        "files.eol": "\n"
    },
    "[yaml]": {
        "editor.autoIndent": "advanced",
        "editor.insertSpaces": true,
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        },
        "editor.tabSize": 2
    },
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 80}",

    "C_Cpp.intelliSenseEngine": "Tag Parser",

    "cmake.configureOnOpen": true,

    "csv-preview.capitalizeHeaders": false,
    "csv-preview.formatValues": "never",
    "csv-preview.lineNumbers": "ordinal",
    "csv-preview.skipComments": true,
    "csv-preview.resizeColumns": "all",

    "debug.onTaskErrors": "showErrors",
    "diffEditor.ignoreTrimWhitespace": false,

    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.fontFamily": "'JetBrains Mono', 'Cascadia Code', Menlo, Consolas",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    // "editor.lineHeight": 1.3,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.rulers": [79, 119],
    "editor.suggestSelection": "first",
    "editor.wordWrap": "on",

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.incrementalNaming": "smart",

    "extensions.autoUpdate": "onlyEnabledExtensions",
    "extensions.ignoreRecommendations": false,

    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.ignoreLegacyWarning": true,
    "gitblame.infoMessageFormat": "${commit.hash}",
    "gitblame.statusBarMessageFormat": "${commit.summary} â€¢ ${time.ago} by ${author.name}",
    "gitblame.statusBarMessageNoCommit": "Uncommited Changes",
    "gitblame.statusBarMessageClickAction": "Open tool URL",

    "files.associations": {
        ".xbindkeysrc": "shellscript",
        "*.cse": "perl",
        "*.dat": "tsv",
        "*.log": "log",
        "*.pvsm": "xml",
        "*Dict.*": "cpp",
        "*Dict": "cpp",
        "*Field": "cpp",
        "*Properties": "cpp",
        "*shrc": "shellscript",
        "All*[clean,mesh,run]": "shellscript",
        "exclude": "ignore",
        "fv*[Contraints,Schemes,Solution]": "cpp",
        "**/system/fn*": "cpp"
    },
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    "jupyter.askForKernelRestart": false,
    "jupyter.interactiveWindowMode": "perFile",
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "python.formatting.provider": "yapf",
    "python.languageServer": "Pylance",

    "security.workspace.trust.untrustedFiles": "open",

    "settingsSync.ignoredExtensions": [
        "ms-vscode-remote.remote-wsl"
    ],

    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.scrollback": 10000000,
    "terminal.integrated.tabs.enabled": true,

    "update.mode": "start",

    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    "window.autoDetectColorScheme": true,

    "workbench.editor.decorations.badges": true,
    "workbench.editor.wrapTabs": false,
    "workbench.editorAssociations": {
        "*.stl": "default",
        "*.ipynb": "jupyter-notebook",
        "*.pdf": "pdf.preview"
    },
    "workbench.editor.untitled.hint": "hidden",
    "hexeditor.columnWidth": 16,
    "hexeditor.showDecodedText": true,
    "hexeditor.defaultEndianness": "little",
    "hexeditor.inspectorType": "aside",
    "workbench.editor.showTabs": true,
    "workbench.startupEditor": "none",
    "window.commandCenter": true,
    "window.zoomLevel": 1
}